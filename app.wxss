/**app.wxss - 全局样式（乡村文化主题）**/

/* 页面基础样式 */
page {
  height: 100%;
  background-color: #F5F1E8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  font-size: 16px;
  line-height: 1.6;
  color: #2C2416;
}

/* 容器 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0;
  box-sizing: border-box;
}

/* 页面容器 */
.page {
  min-height: 100%;
  background-color: #F5F1E8;
}

/* 主题颜色变量（通过类名使用） */
.primary-color {
  color: #8B7355;
}

.secondary-color {
  color: #D4A574;
}

.accent-color {
  color: #7A9E7E;
}

/* 文字颜色 */
.text-primary {
  color: #2C2416;
}

.text-secondary {
  color: #6B5D52;
}

.text-hint {
  color: #9B8B7A;
}

/* 背景颜色 */
.bg-primary {
  background-color: #8B7355;
}

.bg-secondary {
  background-color: #D4A574;
}

.bg-page {
  background-color: #F5F1E8;
}

/* 按钮样式 */
.btn {
  padding: 12px 24px;
  border-radius: 25px;
  font-size: 16px;
  font-weight: bold;
  border: none;
  transition: all 0.3s;
}

.btn-primary {
  background: linear-gradient(135deg, #8B7355 0%, #D4A574 100%);
  color: #ffffff;
  box-shadow: 0 4px 12px rgba(139, 115, 85, 0.3);
}

.btn-primary:active {
  opacity: 0.9;
  transform: translateY(1px);
}

/* 卡片样式 */
.card {
  background: #ffffff;
  border-radius: 12px;
  padding: 15px;
  margin-bottom: 15px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
}

/* 分割线 */
.divider {
  height: 1px;
  background-color: #E8DFD0;
  margin: 15px 0;
}

/* 列表项 */
.list-item {
  background: #ffffff;
  padding: 15px;
  margin-bottom: 10px;
  border-radius: 8px;
  display: flex;
  align-items: center;
}

/* 图标基础样式 */
.icon {
  width: 20px;
  height: 20px;
}

.icon-large {
  width: 40px;
  height: 40px;
}

/* 省略号 */
.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* Flex 布局工具类 */
.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-1 {
  flex: 1;
}

/* 间距工具类 */
.mt-10 { margin-top: 10px; }
.mt-15 { margin-top: 15px; }
.mt-20 { margin-top: 20px; }
.mb-10 { margin-bottom: 10px; }
.mb-15 { margin-bottom: 15px; }
.mb-20 { margin-bottom: 20px; }
.ml-10 { margin-left: 10px; }
.mr-10 { margin-right: 10px; }
.p-10 { padding: 10px; }
.p-15 { padding: 15px; }
.p-20 { padding: 20px; }

/* 文字对齐 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

/* 加载状态 */
.loading {
  text-align: center;
  padding: 20px;
  color: #9B8B7A;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 50px 20px;
  color: #9B8B7A;
}

.empty-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 20px;
  opacity: 0.5;
}

.empty-text {
  font-size: 14px;
}
