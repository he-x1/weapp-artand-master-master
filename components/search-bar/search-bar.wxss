/* components/search-bar/search-bar.wxss */
.search-bar {
  display: flex;
  align-items: center;
  padding: 10px 15px;
  background: #f5f1e8;
}

.search-container {
  flex: 1;
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 20px;
  padding: 8px 15px;
  border: 1px solid #e8dfd0;
}

.search-icon {
  width: 18px;
  height: 18px;
  margin-right: 8px;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  height: 24px;
  font-size: 14px;
  color: #2c2416;
}

.clear-icon {
  width: 18px;
  height: 18px;
  margin-left: 8px;
  opacity: 0.5;
}

.search-button {
  margin-left: 10px;
  padding: 8px 15px;
  background: linear-gradient(135deg, #8b7355 0%, #d4a574 100%);
  border-radius: 20px;
  color: #ffffff;
  font-size: 14px;
}
