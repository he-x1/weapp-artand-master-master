/* components/culture-card/culture-card.wxss */
.culture-card {
  background: #ffffff;
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: 15px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
}

.card-image-container {
  position: relative;
  width: 100%;
  height: 200px;
}

.card-image {
  width: 100%;
  height: 100%;
}

.card-mask {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 30px 15px 15px;
  background: linear-gradient(transparent, rgba(0,0,0,0.7));
}

.card-title {
  display: block;
  color: #ffffff;
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
}

.card-subtitle {
  display: block;
  color: rgba(255, 255, 255, 0.9);
  font-size: 13px;
}

.card-footer {
  padding: 12px 15px;
}

.card-stats {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.stat-item {
  display: flex;
  align-items: center;
  margin-right: 20px;
}

.stat-icon {
  width: 16px;
  height: 16px;
  margin-right: 5px;
}

.stat-text {
  font-size: 13px;
  color: #666666;
}
