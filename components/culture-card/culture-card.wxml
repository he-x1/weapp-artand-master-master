<!-- components/culture-card/culture-card.wxml -->
<view class="culture-card" bindtap="onTap">
  <view class="card-image-container">
    <image
      class="card-image"
      src="{{currentImage}}"
      mode="aspectFill"
      lazy-load="true"
      binderror="onImageError"
      bindload="onImageLoad"
    ></image>
    <view class="card-mask">
      <text class="card-title">{{item.name}}</text>
      <text class="card-subtitle">{{item.category}}</text>
    </view>
  </view>

  <view class="card-footer">
    <view class="card-stats">
      <view class="stat-item">
        <image class="stat-icon" src="/images/see.png"></image>
        <text class="stat-text">{{item.viewCount || 0}}</text>
      </view>
      <view class="stat-item">
        <image class="stat-icon" src="/images/love.png"></image>
        <text class="stat-text">{{item.likeCount || 0}}</text>
      </view>
      <view class="stat-item">
        <image class="stat-icon" src="/images/collect.png"></image>
        <text class="stat-text">{{item.collectCount || 0}}</text>
      </view>
    </view>
  </view>
</view>
