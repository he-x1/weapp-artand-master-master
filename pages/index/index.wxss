/* pages/index/index.wxss */

/* 轮播图 */
.banner-swiper {
  width: 100%;
  height: 200px;
  margin-bottom: 15px;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20px 15px 15px;
  background: linear-gradient(transparent, rgba(0,0,0,0.6));
  color: #ffffff;
  font-size: 16px;
  font-weight: bold;
}

/* 分类区域 */
.category-section {
  background: #ffffff;
  padding: 15px 0;
  margin-bottom: 15px;
}

.section-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 15px 15px;
}

.title-text {
  font-size: 18px;
  font-weight: bold;
  color: #2C2416;
}

.more-link {
  font-size: 13px;
  color: #9B8B7A;
}

.arrow {
  margin-left: 5px;
}

.category-scroll {
  width: 100%;
  white-space: nowrap;
}

.category-grid {
  display: inline-flex;
  padding: 0 10px;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 10px;
  min-width: 60px;
}

.category-icon-wrap {
  width: 50px;
  height: 50px;
  background: linear-gradient(135deg, #8B7355 0%, #D4A574 100%);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8px;
}

.category-icon {
  width: 28px;
  height: 28px;
}

.category-name {
  font-size: 12px;
  color: #6B5D52;
}

/* 推荐区域 */
.recommend-section {
  background: #ffffff;
  min-height: 500px;
}

.tab-nav {
  display: flex;
  gap: 20px;
}

.tab-item {
  font-size: 14px;
  color: #9B8B7A;
  padding-bottom: 5px;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #8B7355;
  font-weight: bold;
  border-bottom: 2px solid #8B7355;
}

/* 内容列表 */
.content-wrapper {
  padding: 0 10px 20px;
}

.content-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  opacity: 1;
  transition: opacity 0.3s ease;
}

.content-item {
  width: 48%;
  margin-bottom: 15px;
}

/* 加载状态 */
.loading, .no-more {
  text-align: center;
  padding: 20px;
  color: #9B8B7A;
  font-size: 13px;
}
