/* pages/search/search.wxss */

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 10px 15px;
  background: #ffffff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input-wrap {
  flex: 1;
  display: flex;
  align-items: center;
  background: #F5F1E8;
  border-radius: 20px;
  padding: 8px 15px;
}

.search-icon {
  width: 18px;
  height: 18px;
  margin-right: 8px;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  height: 24px;
  font-size: 14px;
}

.clear-icon {
  width: 18px;
  height: 18px;
  margin-left: 8px;
  opacity: 0.5;
}

.cancel-btn {
  margin-left: 10px;
  color: #8B7355;
  font-size: 14px;
}

/* 分区 */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #2C2416;
}

.clear-all {
  font-size: 13px;
  color: #9B8B7A;
}

/* 搜索历史 */
.history-section {
  background: #ffffff;
  margin-bottom: 10px;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 15px 15px;
  gap: 10px;
}

.history-item {
  padding: 6px 15px;
  background: #F5F1E8;
  border-radius: 15px;
  font-size: 13px;
  color: #6B5D52;
}

/* 热门搜索 */
.hot-section {
  background: #ffffff;
}

.hot-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 15px 15px;
  gap: 10px;
}

.hot-item {
  padding: 8px 18px;
  background: linear-gradient(135deg, #8B7355 0%, #D4A574 100%);
  border-radius: 15px;
  font-size: 13px;
  color: #ffffff;
}

/* 搜索结果 */
.results-section {
  padding: 15px;
}

.result-count {
  font-size: 13px;
  color: #9B8B7A;
  margin-bottom: 15px;
}

.result-list {
  background: #ffffff;
  border-radius: 12px;
  overflow: hidden;
}

.result-item {
  display: flex;
  padding: 15px;
  border-bottom: 1px solid #F5F1E8;
}

.result-item:last-child {
  border-bottom: none;
}

.result-image {
  width: 80px;
  height: 80px;
  border-radius: 8px;
  margin-right: 15px;
}

.result-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.result-name {
  font-size: 16px;
  font-weight: bold;
  color: #2C2416;
  margin-bottom: 5px;
}

.result-category {
  font-size: 13px;
  color: #9B8B7A;
  margin-bottom: 10px;
}

.result-stats {
  display: flex;
  gap: 15px;
}

.stat-text {
  font-size: 12px;
  color: #6B5D52;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 50px 20px;
}

.empty-icon {
  width: 60px;
  height: 60px;
  opacity: 0.3;
  margin-bottom: 15px;
}

.empty-text {
  display: block;
  font-size: 16px;
  color: #6B5D52;
  margin-bottom: 10px;
}

.empty-tip {
  display: block;
  font-size: 13px;
  color: #9B8B7A;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 20px;
  color: #9B8B7A;
}
