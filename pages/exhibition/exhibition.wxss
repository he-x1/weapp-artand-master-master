/* pages/exhibition/exhibition.wxss */

/* 分类按钮区域 */
.category-buttons {
  background: #ffffff;
  padding: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.category-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.category-btn {
  width: calc(25% - 7.5px);
  padding: 12px 8px;
  background: #F5F1E8;
  border-radius: 8px;
  text-align: center;
  border: 2px solid transparent;
  transition: all 0.3s ease;
}

.category-btn.active {
  background: linear-gradient(135deg, #8B7355 0%, #D4A574 100%);
  border-color: #8B7355;
}

.btn-name {
  font-size: 13px;
  color: #6B5D52;
  font-weight: 500;
}

.category-btn.active .btn-name {
  color: #ffffff;
  font-weight: bold;
}

/* 内容滚动区域 */
.content-scroll {
  height: calc(100vh - 140px);
  background: #F5F1E8;
}

.content-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15px 15px 10px;
}

.content-title {
  font-size: 18px;
  font-weight: bold;
  color: #2C2416;
}

.content-count {
  font-size: 12px;
  color: #9B8B7A;
}

.content-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
  padding: 0 15px 15px;
}

.content-item {
  display: flex;
  background: #ffffff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.content-item:active {
  transform: scale(0.98);
  box-shadow: 0 1px 8px rgba(0, 0, 0, 0.1);
}

.content-img {
  width: 110px;
  height: 110px;
  flex-shrink: 0;
}

.content-info {
  flex: 1;
  padding: 12px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.content-name {
  display: block;
  font-size: 16px;
  font-weight: bold;
  color: #2C2416;
  margin-bottom: 6px;
}

.content-desc {
  font-size: 13px;
  color: #6B5D52;
  line-height: 1.5;
  margin-bottom: 8px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.content-footer {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.content-stats {
  display: flex;
  gap: 15px;
}

.stat {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #9B8B7A;
}

.stat-icon {
  width: 14px;
  height: 14px;
  margin-right: 4px;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 80px 20px;
}

.empty-icon {
  width: 80px;
  height: 80px;
  opacity: 0.3;
  margin-bottom: 20px;
}

.empty-text {
  display: block;
  font-size: 15px;
  color: #9B8B7A;
}
