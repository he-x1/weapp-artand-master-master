/* pages/exhibition/exhibition.wxss */

.page {
  min-height: 100vh;
  background: #F5F1E8;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #8B7355 0%, #D4A574 100%);
  padding: 20px 15px;
}

.page-title {
  font-size: 20px;
  font-weight: bold;
  color: #ffffff;
}

/* 分类按钮区域 - 两行四列布局 */
.category-buttons {
  background: #ffffff;
  padding: 15px;
  margin-bottom: 10px;
}

.category-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  justify-content: space-between;
}

.category-btn {
  width: calc(25% - 8px);
  padding: 12px 5px;
  background: #F5F1E8;
  border-radius: 10px;
  text-align: center;
  border: 2px solid transparent;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.category-btn.active {
  background: linear-gradient(135deg, #8B7355 0%, #D4A574 100%);
  border-color: #8B7355;
  box-shadow: 0 2px 8px rgba(139, 115, 85, 0.3);
}

.btn-name {
  font-size: 13px;
  color: #6B5D52;
  font-weight: 500;
}

.btn-count {
  font-size: 11px;
  color: #9B8B7A;
  margin-top: 4px;
}

.category-btn.active .btn-name,
.category-btn.active .btn-count {
  color: #ffffff;
  font-weight: bold;
}

/* 内容列表 */
.content-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
  padding: 15px;
}

.content-item {
  display: flex;
  background: #ffffff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.content-item:active {
  transform: scale(0.98);
  box-shadow: 0 1px 8px rgba(0, 0, 0, 0.1);
}

.content-img {
  width: 120px;
  height: 120px;
  flex-shrink: 0;
  background: #f0f0f0;
}

.content-info {
  flex: 1;
  padding: 12px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 120px;
}

.content-name {
  font-size: 16px;
  font-weight: bold;
  color: #2C2416;
  margin-bottom: 6px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}

.content-desc {
  font-size: 13px;
  color: #6B5D52;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  flex: 1;
}

.content-stats {
  display: flex;
  gap: 15px;
  margin-top: 8px;
}

.stat {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #9B8B7A;
}

.stat-icon {
  width: 14px;
  height: 14px;
  margin-right: 4px;
}

/* 空状态 */
.empty-state {
  padding: 60px 15px;
  text-align: center;
}

.empty-icon {
  width: 80px;
  height: 80px;
  opacity: 0.3;
  margin-bottom: 20px;
}

.empty-text {
  display: block;
  font-size: 15px;
  color: #9B8B7A;
  margin-bottom: 8px;
}

.empty-tip {
  display: block;
  font-size: 13px;
  color: #B0A090;
}

/* 加载状态 */
.loading {
  padding: 20px;
  text-align: center;
  color: #9B8B7A;
  font-size: 14px;
}

.no-more {
  padding: 20px;
  text-align: center;
  color: #9B8B7A;
  font-size: 13px;
}
