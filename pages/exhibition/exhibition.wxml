<!--pages/exhibition/exhibition.wxml-->
<view class="page">
  <!-- 搜索栏（仅分类模式下显示） -->
  <search-bar 
    wx:if="{{type === 'category'}}"
    placeholder="搜索文化内容..."
    bind:search="onSearch"
  ></search-bar>

  <!-- 分类标签（仅分类模式下显示） -->
  <scroll-view 
    wx:if="{{type === 'category'}}"
    class="category-tabs" 
    scroll-x
  >
    <view class="tabs-container">
      <view
        class="tab-item {{activeCategoryId === item.id ? 'active' : ''}}"
        wx:for="{{categories}}"
        wx:key="id"
        bindtap="switchCategory"
        data-id="{{item.id}}"
      >
        {{item.name}}
      </view>
    </view>
  </scroll-view>

  <!-- 页面标题（点赞/收藏/历史模式） -->
  <view wx:if="{{title}}" class="page-header">
    <text class="page-title">{{title}}</text>
  </view>

  <!-- 内容列表 -->
  <view class="content-list">
    <block wx:if="{{currentContent.length > 0}}">
      <view
        class="content-item"
        wx:for="{{currentContent}}"
        wx:key="id"
      >
        <culture-card 
          item="{{item}}" 
          bind:tap="goToDetail"
        ></culture-card>
      </view>
    </block>
    
    <!-- 空状态 -->
    <view wx:if="{{!loading && currentContent.length === 0}}" class="empty-state">
      <image class="empty-icon" src="/images/empty.png" mode="aspectFit"></image>
      <text class="empty-text">暂无内容</text>
      <text class="empty-tip" wx:if="{{type === 'likes'}}">去浏览并点赞你喜欢的内容吧</text>
      <text class="empty-tip" wx:if="{{type === 'collects'}}">去收藏你感兴趣的内容吧</text>
      <text class="empty-tip" wx:if="{{type === 'history'}}">还没有浏览记录</text>
    </view>
    
    <!-- 加载状态 -->
    <view wx:if="{{loading}}" class="loading">
      <text>加载中...</text>
    </view>
    
    <!-- 没有更多 -->
    <view wx:if="{{!hasMore && currentContent.length > 0}}" class="no-more">
      <text>没有更多了</text>
    </view>
  </view>
</view>
