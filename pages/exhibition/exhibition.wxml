<!--pages/exhibition/exhibition.wxml-->
<view class="page">
  <!-- 搜索栏（仅分类模式下显示） -->
  <search-bar 
    wx:if="{{type === 'category'}}"
    placeholder="搜索文化内容..."
    bind:search="onSearch"
  ></search-bar>

  <!-- 分类按钮区域（两行四列布局） -->
  <view wx:if="{{type === 'category'}}" class="category-buttons">
    <view class="category-grid">
      <view
        class="category-btn {{activeCategoryId === item.id ? 'active' : ''}}"
        wx:for="{{categories}}"
        wx:key="id"
        bindtap="switchCategory"
        data-id="{{item.id}}"
      >
        <text class="btn-name">{{item.name}}</text>
        <text class="btn-count">{{item.count || 0}}</text>
      </view>
    </view>
  </view>

  <!-- 页面标题（点赞/收藏/历史模式） -->
  <view wx:if="{{title}}" class="page-header">
    <text class="page-title">{{title}}</text>
  </view>

  <!-- 内容列表 -->
  <view class="content-list">
    <block wx:if="{{currentContent.length > 0}}">
      <view
        class="content-item"
        wx:for="{{currentContent}}"
        wx:key="id"
        bindtap="goToDetail"
        data-item="{{item}}"
      >
        <image
          class="content-img"
          src="{{item.image || '/images/bg.png'}}"
          mode="aspectFill"
          lazy-load="true"
          binderror="onImageError"
          data-index="{{index}}"
        ></image>
        <view class="content-info">
          <text class="content-name">{{item.name}}</text>
          <text class="content-desc">{{item.description || '暂无描述'}}</text>
          <view class="content-stats">
            <view class="stat">
              <image class="stat-icon" src="/images/see.png"></image>
              <text>{{item.viewCount || 0}}</text>
            </view>
            <view class="stat">
              <image class="stat-icon" src="/images/love.png"></image>
              <text>{{item.likeCount || 0}}</text>
            </view>
            <view class="stat">
              <image class="stat-icon" src="/images/collect.png"></image>
              <text>{{item.collectCount || 0}}</text>
            </view>
          </view>
        </view>
      </view>
    </block>
    
    <!-- 空状态 -->
    <view wx:if="{{!loading && currentContent.length === 0}}" class="empty-state">
      <image class="empty-icon" src="/images/empty.png" mode="aspectFit" wx:if="{{false}}"></image>
      <text class="empty-text">暂无内容</text>
      <text class="empty-tip" wx:if="{{type === 'likes'}}">去浏览并点赞你喜欢的内容吧</text>
      <text class="empty-tip" wx:if="{{type === 'collects'}}">去收藏你感兴趣的内容吧</text>
      <text class="empty-tip" wx:if="{{type === 'history'}}">还没有浏览记录</text>
    </view>
    
    <!-- 加载状态 -->
    <view wx:if="{{loading}}" class="loading">
      <text>加载中...</text>
    </view>
    
    <!-- 没有更多 -->
    <view wx:if="{{!hasMore && currentContent.length > 0}}" class="no-more">
      <text>没有更多了</text>
    </view>
  </view>
</view>
