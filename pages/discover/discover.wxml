<!--pages/discover/discover.wxml-->
<view class="page">
  <!-- 页面标题 -->
  <view class="page-header">
    <text class="page-title">发现乡村文化</text>
    <text class="page-subtitle">探索传统之美</text>
  </view>

  <!-- 搜索栏 -->
  <search-bar
    placeholder="搜索你感兴趣的内容..."
    bind:search="onSearch"
  ></search-bar>

  <!-- 热门推荐 -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">热门推荐</text>
      <view class="section-line"></view>
    </view>

    <view class="img-list" wx:if="{{hotList.length > 0}}">
      <view
        class="img-item"
        wx:for="{{hotList}}"
        wx:key="id"
        bindtap="goToDetail"
        data-item="{{item}}"
      >
        <image
          src="{{item.image || '/images/bg.png'}}"
          class="discover-image"
          mode="aspectFill"
          lazy-load="true"
        ></image>
        <view class="img-overlay">
          <text class="img-title">{{item.name}}</text>
          <view class="stats-bar">
            <view class="stat">
              <image src="/images/see.png" class="stat-icon"></image>
              <text>{{item.viewCount || 0}}</text>
            </view>
            <view class="stat">
              <image src="/images/love.png" class="stat-icon"></image>
              <text>{{item.likeCount || 0}}</text>
            </view>
            <view class="stat">
              <image src="/images/collect.png" class="stat-icon"></image>
              <text>{{item.collectCount || 0}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>

    <!-- 空状态 -->
    <view wx:if="{{!loading && hotList.length === 0}}" class="empty-state">
      <text class="empty-text">暂无热门推荐</text>
    </view>
  </view>

  <!-- 精选内容 - 左图右文布局 -->
  <view class="section">
    <view class="section-header">
      <text class="section-title">精选内容</text>
      <view class="section-line"></view>
    </view>

    <view class="recommend-list" wx:if="{{recommendList.length > 0}}">
      <view
        class="recommend-item"
        wx:for="{{recommendList}}"
        wx:key="id"
        bindtap="goToDetail"
        data-item="{{item}}"
      >
        <image
          src="{{item.image || '/images/bg.png'}}"
          class="recommend-image"
          mode="aspectFill"
          lazy-load="true"
          binderror="onRecommendImageError"
          data-index="{{index}}"
        ></image>
        <view class="recommend-info">
          <text class="recommend-name">{{item.name}}</text>
          <text class="recommend-desc">{{item.summary || item.description || '暂无描述'}}</text>
          <view class="recommend-stats">
            <view class="stat">
              <image src="/images/see.png" class="stat-icon"></image>
              <text>{{item.viewCount || 0}}</text>
            </view>
            <view class="stat">
              <image src="/images/love.png" class="stat-icon"></image>
              <text>{{item.likeCount || 0}}</text>
            </view>
            <view class="stat">
              <image src="/images/collect.png" class="stat-icon"></image>
              <text>{{item.collectCount || 0}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>

    <!-- 空状态 -->
    <view wx:if="{{!loading && recommendList.length === 0}}" class="empty-state">
      <text class="empty-text">暂无精选内容</text>
    </view>

    <!-- 加载状态 -->
    <view wx:if="{{loading}}" class="loading">
      <text>加载中...</text>
    </view>
  </view>
</view>
