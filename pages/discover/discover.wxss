/* pages/discover/discover.wxss */

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #8B7355 0%, #D4A574 100%);
  padding: 20px 15px;
  color: #ffffff;
}

.page-title {
  font-size: 24px;
  font-weight: bold;
  display: block;
  margin-bottom: 5px;
}

.page-subtitle {
  font-size: 14px;
  opacity: 0.9;
}

/* 分区 */
.section {
  margin-bottom: 20px;
}

.section-header {
  padding: 15px;
  display: flex;
  align-items: center;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  color: #2C2416;
  margin-right: 10px;
}

.section-line {
  flex: 1;
  height: 1px;
  background: linear-gradient(to right, #D4A574, transparent);
}

/* 图片列表 */
.img-list {
  padding: 0 15px;
}

.img-item {
  position: relative;
  width: 100%;
  height: 200px;
  margin-bottom: 15px;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
}

.discover-image {
  width: 100%;
  height: 100%;
}

.img-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20px 15px 15px;
  background: linear-gradient(transparent, rgba(0,0,0,0.5));
}

/* 统计栏 */
.stats-bar {
  display: flex;
  gap: 15px;
}

.stat {
  display: flex;
  align-items: center;
  color: #ffffff;
  font-size: 13px;
}

.stat-icon {
  width: 14px;
  height: 14px;
  margin-right: 5px;
}

/* 网格布局 */
.img-grid {
  padding: 0 15px;
}

.grid-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15px;
}

.grid-item {
  position: relative;
  width: 48%;
  height: 150px;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
}

.grid-image {
  width: 100%;
  height: 100%;
}

.grid-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 15px 10px 10px;
  background: linear-gradient(transparent, rgba(0,0,0,0.5));
}

.grid-title {
  color: #ffffff;
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 8px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}

/* 空状态 */
.empty-state {
  padding: 40px 15px;
  text-align: center;
}

.empty-text {
  color: #9B8B7A;
  font-size: 14px;
}

/* 加载状态 */
.loading {
  padding: 20px;
  text-align: center;
  color: #9B8B7A;
  font-size: 14px;
}

/* 精选内容 - 左图右文列表布局 */
.recommend-list {
  padding: 0 15px;
}

.recommend-item {
  display: flex;
  background: #ffffff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  margin-bottom: 12px;
  transition: all 0.3s ease;
}

.recommend-item:active {
  transform: scale(0.98);
  box-shadow: 0 1px 8px rgba(0, 0, 0, 0.1);
}

.recommend-image {
  width: 120px;
  height: 120px;
  flex-shrink: 0;
  background: #f5f5f5;
}

.recommend-info {
  flex: 1;
  padding: 12px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 120px;
}

.recommend-name {
  font-size: 16px;
  font-weight: bold;
  color: #2C2416;
  margin-bottom: 6px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}

.recommend-desc {
  font-size: 13px;
  color: #6B5D52;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  flex: 1;
}

.recommend-stats {
  display: flex;
  gap: 15px;
  margin-top: 8px;
}

.recommend-stats .stat {
  color: #9B8B7A;
}
